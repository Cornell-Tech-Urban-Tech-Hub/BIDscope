---
export interface Props {
  backToTop?: boolean;
}

const { backToTop = false } = Astro.props;
const currentYear = new Date().getFullYear();
---

{
  backToTop && (
    <button
      class:list={[
        backToTop ? `backToTop` : null,
        'transition-300 z-50 opacity-0 fixed flex items-center justify-center bottom-[24px] right-[24px] w-12 h-12 bg-white card-shadow rounded-full border border-gray-200 hover:transform hover:translate-y-[-4px]',
      ]}
      aria-label="Back to top"
    >
      <svg
        xmlns='http://www.w3.org/2000/svg'
        fill='none'
        viewBox='0 0 24 24'
        height='24'
        width='24'
        stroke-width='2'
        stroke='currentColor'
        class="text-primary"
      >
        <path
          stroke-linecap='round'
          stroke-linejoin='round'
          d='m4.5 15.75 7.5-7.5 7.5 7.5'
        />
      </svg>
    </button>
  )
}

<footer class="site-footer">
  <div class="footer-container">
    <div class="footer-grid">
      <!-- About Section -->
      <div class="footer-section">
        <h3 class="footer-heading">About BIDspec</h3>
