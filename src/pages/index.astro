<script>
// Enhanced page transition handling
document.addEventListener('DOMContentLoaded', () => {
  // Apply header offset fix immediately on first load
  const headerHeight = document.querySelector('.site-header')?.offsetHeight || 0;
  document.documentElement.style.setProperty('--header-height', `${headerHeight}px`);
  
  // Handle image fallbacks
  const imgElements = document.querySelectorAll('img');
  imgElements.forEach(img => {
    img.onerror = () => {
      img.src = '/images/placeholder.jpg';
    };
  });

  // Fix fade-in transitions when navigating back to home page
  const fadeElements = document.querySelectorAll('.fade-in');
  
  // Function to check if element is in viewport and apply transition
  const applyFadeIn = () => {
    fadeElements.forEach(element => {
      // Reset any inline styles to ensure transitions can reapply
      element.style.opacity = '';
      element.style.transform = '';
      
      // Slight delay to ensure the DOM has updated
      setTimeout(() => {
        // Apply the fade-in class animation
        element.classList.add('animated');
      }, 10);
    });
  };
  
  // Apply transitions on load and when navigating via history
  applyFadeIn();
  
  // Handle browser navigation events
  window.addEventListener('popstate', applyFadeIn);
  
  // Add CSS for the animation if not already in your global styles
  if (!document.getElementById('fade-in-styles')) {
    const styleSheet = document.createElement('style');
    styleSheet.id = 'fade-in-styles';
    styleSheet.textContent = `
      .fade-in {
        opacity: 0;
        transform: translateY(20px);
        transition: opacity 0.5s ease-out, transform 0.5s ease-out;
      }
      .fade-in.animated {
        opacity: 1;
        transform: translateY(0);
      }
    `;
    document.head.appendChild(styleSheet);
  }
});
</script>

